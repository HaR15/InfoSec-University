<section class="default-center">
	<h1 style="text-align:center"><%= req.session.username %>'s Profile</h1>

	<!--DISPLAY COMPLETED EXERCISES HERE-->
	<% 
		var completedExercisesList = [];
		for (i = 0; i < user[0].completedExercises.length; i++) {    
			completedExercisesList.push(user[0].completedExercises[i]);
		} 
	%>
	<div class="exercise-complete">
		<h3>Exercises Completed</h3>
		<div class="container">
			<h4>Basic Security</h4>
			<ul>
				<% if (completedExercisesList.indexOf("Comments are deadly") >= 0){ %> <li>Comments are deadly</li> <% } %>

<!-- 
	Alert section. If there are any errors, warnings, or confirmations to display to user,
	display it here.
-->
<% if (messages && messages['error'].length > 0) { %>
  <div class="alert alert-error">
  <% messages['error'].forEach(function(message) { %>
    <%= message %>
    <br>
  <% }); %>
  </div>
  <br>
<% } %>
<% if (messages && messages['warning'].length > 0) { %>
  <div class="alert alert-warning">
  <% messages['warning'].forEach(function(message) { %>
    <%= message %>
    <br>
  <% }); %>
  </div>
  <br>
<% } %>
<% if (messages && messages['success'].length > 0) { %>
  <div class="alert alert-success">
  <% messages['success'].forEach(function(message) { %>
    <%= message %>
    <br>
  <% }); %>
  </div>
  <br>
<% } %>

<div class="user-container">
  <h1>Signup</h1>
  <form action="/user" method="post">

    <label for="username">Your name ?</label>
    <input name="username" type="text" pattern="[A-Za-z]{4,}" title="4 characters minimum | only upper and lowcase letters" required />
    <br/>

    <label for="password">Your safe word?</label>
    <input name="password" type="password" pattern=".{8,}" required title="8 characters minimum"/>
    <br/>
    <br />

    <input type="submit"/>
  </form>
</div>